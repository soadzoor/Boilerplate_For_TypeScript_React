{
	"compilerOptions": {
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "esnext",
		"importHelpers": true,
		"target": "es6",
		"jsx": "react-jsx",
		"allowJs": false,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"skipLibCheck": true,
		"types": ["node", "react", "react-dom", "vite-plugin-svgr/client"],
		"lib": [
			"dom",
			"es7",
			"scripthost",
			"es2015.collection",
			"es2015.core",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		]
	},
	"include": ["src/ts/**/*", "build/start.ts", "build/build.ts", "./vite.config.ts"],
	"exclude": ["node_modules"]
}
