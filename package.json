{
  "name": "typescript-react",
  "version": "0.0.1",
  "description": "TypeScript - React",
  "main": "",
  "scripts": {
    "start": "node build/start",
    "build:dev": "node build/build",
    "build:prod": "node build/build --prod",
    "eslint:report": "eslint --ext .js,.jsx,.ts,.tsx src --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "npm run eslint:report -- --fix",
    "install git hooks": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soadzoor/Boilerplate_For_TypeScript_React"
  },
  "author": "Peter Varga <soadzoor@gmail.com>",
  "license": "",
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx tsc -p tsconfig.json",
      "eslint --ext .js,.jsx,.ts,.tsx src --report-unused-disable-directives --max-warnings 0"
    ]
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "5.3.3"
  },
  "devDependencies": {
    "@types/node": "17.0.22",
    "@types/react": "17.0.41",
    "@types/react-dom": "17.0.14",
    "@types/styled-components": "5.1.24",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@vitejs/plugin-react": "1.2.0",
    "esbuild": "0.14.27",
    "eslint": "8.11.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "sass": "1.49.9",
    "shx": "0.3.4",
    "tslib": "2.3.1",
    "typescript": "4.6.2",
    "uglifycss": "0.0.29",
    "vite": "2.8.6",
    "vite-tsconfig-paths": "3.4.1"
  }
}
