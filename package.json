{
  "name": "typescript-react",
  "version": "0.0.1",
  "description": "TypeScript - React",
  "main": "",
  "type": "module",
  "scripts": {
    "start-dev": "npx ts-node --esm build/start.ts",
    "build-dev": "npx ts-node --esm build/build.ts",
    "build-prod": "npx ts-node --esm build/build.ts --prod",
    "cypress": "cypress open",
    "eslint-report": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx src --report-unused-disable-directives --max-warnings 0 --cache --cache-strategy content",
    "eslint-fix": "npm run eslint-report -- --fix",
    "install-git-hooks": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soadzoor/Boilerplate_For_TypeScript_React"
  },
  "author": "Peter Varga <soadzoor@gmail.com>",
  "license": "",
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c tsc -p tsconfig.json",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "5.3.6"
  },
  "devDependencies": {
    "@types/node": "18.11.15",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@vitejs/plugin-react": "3.0.0",
    "esbuild": "0.16.7",
    "esbuild-sass-plugin": "2.4.3",
    "eslint": "8.29.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin": "1.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "shx": "0.3.4",
    "tslib": "2.4.1",
    "typescript": "4.9.4",
    "uglifycss": "0.0.29",
    "vite": "4.0.1",
    "vite-tsconfig-paths": "4.0.3"
  }
}
